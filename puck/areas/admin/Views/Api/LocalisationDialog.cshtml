@model string
@{
    Layout = null;    
}
@using (Html.BeginForm("Localisation", "Api", new {path=Request["path"] }, FormMethod.Post))
{
    <div class="path_locale_dialog">
        <div class="grid_3 push_1">
            <b>@Request["path"]</b><br />
            <label for="variant">Default Culture @Html.Raw(string.IsNullOrEmpty(Model)?"":" - <span class=\"tred\">"+Model+"</span>")</label>
            <select name="variant">
            <option value="">None</option>
            @foreach (var v in ApiHelper.Variants()) {
                var selected = v.Key.Equals(Model);
                <option @(selected?"selected":"") value="@v.Key">@v.FriendlyName</option>
            }
            </select>
            <button class="btn-link">save</button>
        </div>
    </div>
}