@model List<puck.core.Models.PuckUser>
@{
    Layout = null;    
}
<div class="user_list">
<p>
    <button class="create btn-link">Create</button>
</p>
<table>
    <tr>
        <th>
            Username
        </th>
        <th>
            Email
        </th>
        <th>
            Roles
        </th>
        <th>
            Start Path
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.User.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.Email)
        </td>
        <td>
            @string.Join(", ",item.Roles)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartNode)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { }, new {@class="edit",data_username=item.User.UserName}) <br />
            @Html.ActionLink("Delete", "Delete", new { },new {@class="delete",data_username=item.User.UserName})
        </td>
    </tr>
}

</table>
</div>