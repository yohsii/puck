@model List<Type>
@{
    Layout = null;
    
}
<div class="create_dialog settings">
    <div class="">
        <div class="typecontainer fieldwrapper">
            <label>Select the new type</label>
            @if (Model.Count == 0)
            {
                <p>there are no valid types to change to. this is based on the allowed types set in the settings section and also takes into consideration the types of any children content</p>
            }
            else
            {
            <select name="type">
                @foreach (var t in Model)
                {
                    <option value="@t.Name">@ApiHelper.FriendlyClassName(t)</option>
                }
            </select>
            }
        </div>
        <div>
            <button class='btn-link btn' style="@(Model.Count==0?"display:none;":"")">Submit</button>
        </div>        
    </div>
</div>
